<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="mx.com.cesarcorona.gembaparthner.fragments.WizardFragmentProfile">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:inputType="none"
            android:editable="false"
            android:singleLine="true"
            android:lines="1"
            android:imeOptions="actionNext"
            android:gravity="center"
            android:textColorHint="#FFF"
            android:hint="Subir documentos"
            android:textStyle="bold"
            android:background="@drawable/rounded_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="120dp"
            android:layout_height="60dp" />


        <EditText
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_file_upload_black_48dp"
            android:inputType="none"
            android:editable="false"
            android:lines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:id="@+id/identificacion_upload"
            android:hint="Identificacion "
            android:background="@drawable/rounded_big"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <EditText
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_file_upload_black_48dp"
            android:inputType="none"
            android:editable="false"
            android:lines="1"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:id="@+id/domicilio_upload"
            android:hint="Comprobante domicilio"
            android:background="@drawable/rounded_big"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />







    </LinearLayout>



</FrameLayout>
